{
    "version": "0.5.0-alpha2",
    "authors": [ "joaope" ],
    "copyright": "joaope 2016",
    "title": "LocalAppVeyor",
    "description": "Run your AppVeyor builds, locally.",
    "buildOptions": {
        "warningsAsErrors": true,
        "platform": "anycpu",
        "languageVersion": "csharp6",
        "debugType": "portable",
        "emitEntryPoint": true,
        "copyToOutput": {
            "include": "../../LocalAppVeyor.config.json"
        }
    },
    "packOptions": {
        "owners": [ "joaope" ],
        "summary": "Run your AppVeyor builds, locally.",
        "tags": [ "console", "appveyor", "local", "build", "api" ],
        "repository": {
            "type": "git",
            "url": "https://github.com/joaope/LocalAppVeyor.git"
        },
        "projectUrl": "https://github.com/joaope/LocalAppVeyor"
    },
    "configurations": {
        "Debug": {},
        "Release": {
            "buildOptions": {
                "optimize": true
            }
        }
    },

    "dependencies": {
        "LocalAppVeyor.Engine": "0.5.0-alpha2"
    },

    "frameworks": {
        "net451": {},
        "netcoreapp10": {
            "imports": [ "dotnet" ],
            "dependencies": {
                "Microsoft.NETCore.App": {
                    "version": "1.0.0",
                    "type": "platform"
                }
            }
        }
    }
}