{
    "version": "0.5.0-alpha1",
    "authors": [ "joaope" ],
    "copyright": "joaope 2016",
    "title": "LocalAppVeyor.Engine",
    "description": "Allows one to execute AppVeyor build pipeline programatically, for a given local repository and configuration.",
    "buildOptions": {
        "warningsAsErrors": true,
        "platform": "anycpu",
        "languageVersion": "csharp6",
        "debugType": "portable"
    },
    "packOptions": {
        "owners": [ "joaope" ],
        "summary": "Allows one to execute AppVeyor build pipeline programatically.",
        "tags": [ "console", "appveyor", "local", "build", "api" ],
        "repository": {
            "type": "git",
            "url": "https://github.com/joaope/LocalAppVeyor.git"
        },
        "projectUrl": "https://github.com/joaope/LocalAppVeyor"
    },
    "configurations": {
        "Debug": {},
        "Release": {
            "buildOptions": {
                "optimize": true
            }
        }
    },

    "dependencies": {
        "YamlDotNet": "4.0.1-pre284",
        "Microsoft.Build": "14.3.0",
        "System.Management.Automation": "1.0.0-alpha9",
        "Microsoft.Extensions.CommandLineUtils": "1.0.0"
    },

    "frameworks": {
        "net451": { },
        "netstandard16": {
            "imports": [ "dotnet" ],
            "dependencies": {
                "NETStandard.Library": "1.6.0",
                "System.IO.FileSystem": "4.0.1",
                "System.Runtime.Serialization.Primitives": "4.1.1",
                "System.Diagnostics.Process": "4.1.0"
            }
        }
    }
}